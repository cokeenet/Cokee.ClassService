<UserControl xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"  x:Class="Cokee.ClassService.Views.Controls.InkToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cokee.ClassService.Views.Controls"
             mc:Ignorable="d" 
             Height="100" Width="800">
    <ui:Card x:Name="card" VerticalAlignment="Stretch">
        <Grid Margin="5" Height="60">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ui:Button Icon="Cursor24" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Appearance="Primary" Content="选择" Margin="5" FontSize="18"/>
            <ui:Button Icon="Pen24" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="笔" Grid.Column="1" Margin="5" FontSize="18"/>
            <ui:Button Icon="Cursor24" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="橡皮" Grid.Column="2" Margin="5" FontSize="18"/>
            <ui:Button Icon="Eraser24" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="撤销" Grid.Column="3" Margin="5" FontSize="18"/>
            <ui:Button Icon="MoreHorizontal48" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="更多" Grid.Column="4" Margin="5" FontSize="18"/>

        </Grid>
    </ui:Card>


</UserControl>

<UserControl x:Class="Cokee.ClassService.Views.Controls.CourseCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cokee.ClassService.Views.Controls"
             mc:Ignorable="d" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0"
             Height="120" Width="300">
    <UserControl.RenderTransform>
        <TranslateTransform x:Name="transT" X="330"/>
    </UserControl.RenderTransform>
    <ui:Card VerticalAlignment="Stretch" VerticalContentAlignment="Top">
        <Grid VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label x:Name="title" d:Content="22:00 下一节:没课了" HorizontalAlignment="Left" FontSize="24" VerticalAlignment="Center" FontFamily="Cairo"/>
            <Label x:Name="subtitle" Grid.Row="1" d:Content="本节课程:语文课 结束"/>
        </Grid>
    </ui:Card>
</UserControl>

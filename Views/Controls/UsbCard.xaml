<UserControl x:Class="Cokee.ClassService.Views.Controls.UsbCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <ui:Card
              x:Name="usb" Grid.Column="1" VerticalAlignment="Stretch" Background="#B2FFFFFF" BorderBrush="#FFE0BFBF" BorderThickness="2,2,2,2"
              RenderTransformOrigin="0.5,0.5">
        <ui:Card.RenderTransform>
            <TransformGroup>
                <TranslateTransform x:Name="tranUsb" X="368" />
            </TransformGroup>
        </ui:Card.RenderTransform>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ui:SymbolIcon
                                Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center"
                                FontSize="40" Symbol="UsbStick20" Foreground="Black" Grid.RowSpan="2" />
            <ui:Button x:Name="open" HorizontalAlignment="Right"
                  VerticalAlignment="Top" Background="#CCFFFFFF" BorderBrush="#6CBCEA" BorderThickness="1" Click="Open"
                  Content="打开" Icon="HardDrive20" Tag="" Foreground="Black" Grid.Column="2" Margin="5"/>
            <ui:Button x:Name="remove" HorizontalAlignment="Right"
                 VerticalAlignment="Top" Background="#FFFFFEFE" BorderBrush="#6CBCEA" BorderThickness="1"
                 Click="ExitUsbDrive" Content="弹出" Icon="UsbPlug20" Foreground="Black" Grid.Row="1" Grid.Column="2" Margin="5"/>
            <Label x:Name="diskName"  Content="U盘(?:\)" Foreground="Black" Grid.Column="1" Margin="5" FontSize="16"/>


            <Label x:Name="diskInfo" Content="---GB/---GB" Foreground="Black" Grid.Row="1" Grid.Column="1" Margin="5"/>

        </Grid>
    </ui:Card>
</UserControl>
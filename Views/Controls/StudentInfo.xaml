<UserControl x:Class="Cokee.ClassService.Views.Controls.StudentInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" Height="400" Width="500"
             d:DesignHeight="600" DataContext="{Binding Student}">
    <ui:Card VerticalAlignment="Stretch">
        <Grid VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Content="学生信息" HorizontalAlignment="Center" FontSize="18" VerticalAlignment="Center" />
            <Label HorizontalAlignment="Center" Content="{Binding ID}" d:Content="00000" ContentStringFormat="ID {0}" FontSize="14" VerticalAlignment="Center" Grid.Row="1" />
            <ScrollViewer Grid.Row="2" >
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="/Resources/head.jpg" Width="80" HorizontalAlignment="Left" Margin="5" Height="80" Grid.RowSpan="2" MouseDown="Image_MouseDown">
                            <Image.Clip>
                                <EllipseGeometry RadiusX="40" RadiusY="40" Center="40,40" />
                            </Image.Clip>
                        </Image>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="43.78"/>
                            </Grid.RowDefinitions>
                            <Label Content="姓名" FontSize="16" VerticalAlignment="Bottom" Margin="5"/>
                            <ui:TextBox Grid.Column="1" Margin="5" Text="{Binding Name}" Grid.Row="0" />
                            <Label Content="简介" FontSize="16" VerticalAlignment="Bottom" Margin="5" Grid.Row="1"/>
                            <ui:TextBox Grid.Column="1" Margin="5" Text="{Binding Desc}" Grid.Row="1" />
                        </Grid>
                    </Grid>

                    <ui:CardControl Grid.Row="1" Margin="10" Icon="People28">
                        <ui:CardControl.Header>
                            <TextBlock FontSize="13" FontWeight="Medium" Text="性别"/>
                        </ui:CardControl.Header>
                        <ComboBox x:Name="sexCombo" SelectionChanged="sexCombo_SelectionChanged" SelectedIndex="{Binding Sex}">
                            <ComboBoxItem Content="男"/>
                            <ComboBoxItem Content="女"/>
                        </ComboBox>
                    </ui:CardControl>
                    <ui:CardControl Grid.Row="2" Margin="10" Icon="Notebook32">
                        <ui:CardControl.Header>
                            <TextBlock FontSize="13" FontWeight="Medium" Text="职位"/>
                        </ui:CardControl.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <ui:TextBox LostFocus="TextBox_LostFocus" Margin="0,0,5,0" MinWidth="180" Text="{Binding RoleStr}"/>
                            <ComboBox x:Name="levelCombo" SelectionChanged="sexCombo_SelectionChanged" Grid.Column="1" SelectedIndex="{Binding Role}">
                                <ComboBoxItem Content="无职位"/>
                                <ComboBoxItem Content="Level 1"/>
                                <ComboBoxItem Content="Level 2"/>
                                <ComboBoxItem Content="Level 3"/>
                            </ComboBox>
                        </Grid>
                    </ui:CardControl>
                    <ui:CardControl Grid.Row="3" Margin="10" Icon="FoodCake24">
                        <ui:CardControl.Header>
                            <TextBlock FontSize="13" FontWeight="Medium" Text="生日"/>
                        </ui:CardControl.Header>
                        <DatePicker MinWidth="100" SelectedDateChanged="DatePicker_SelectedDateChanged"/>
                    </ui:CardControl>
                    <ui:CardControl Grid.Row="4" Margin="10,0,10,0" Icon="LocalLanguage28">
                        <ui:CardControl.Header>
                            <TextBlock FontSize="13" FontWeight="Medium" Text="小语种"/>
                        </ui:CardControl.Header>
                        <ui:ToggleSwitch IsChecked="{Binding IsMinorLang}" Click="ToggleSwitch_Click"/>
                    </ui:CardControl>

                </Grid>
            </ScrollViewer>
            <ui:Button Grid.Row="3" Content="保存" Icon="Checkmark48" Appearance="Primary" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" Click="Confirm" />
        </Grid>
    </ui:Card>
</UserControl>
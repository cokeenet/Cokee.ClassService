<UserControl x:Class="Cokee.ClassService.Views.Controls.StudentInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="500">
    <ui:Card VerticalAlignment="Stretch">
        <Grid Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Content="学生信息" HorizontalAlignment="Center" FontSize="18" VerticalAlignment="Center" />
            <Label HorizontalAlignment="Center" FontSize="14" VerticalAlignment="Center" Grid.Row="1" />
            <ScrollViewer Grid.Row="2" d:DataContext="{d:SampleData}">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="{Binding HeadPicUrl}" Width="50" HorizontalAlignment="Left" Margin="6,0,0,0">
                            <Image.Clip>
                                <EllipseGeometry RadiusX="25" RadiusY="25" Center="25,25" />
                            </Image.Clip>
                        </Image>
                        <ui:TextBox Grid.Column="1" Margin="5" Text="{Binding Name}"/>
                    </Grid>

                    <ui:CardControl Grid.Row="1" Margin="10">
                        
                    </ui:CardControl>
                    <ui:CardControl Grid.Row="1" Margin="10"/>
                </Grid>
            </ScrollViewer>
            <Grid Grid.Row="3" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ui:Button Content="确认" Icon="Checkmark48" Appearance="Primary" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" Click="Confirm" Grid.Row="3" />
                <ui:Button Grid.Column="1" Icon="Dismiss48" Appearance="Danger" Content="取消" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Cancel" />
            </Grid>
        </Grid>
    </ui:Card>
</UserControl>
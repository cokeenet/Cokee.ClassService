<UserControl x:Class="Cokee.ClassService.Views.Controls.RandomResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cokee.ClassService.Views.Controls"
              xmlns:Pages="clr-namespace:Cokee.ClassService.Helper"
             mc:Ignorable="d" 
             Height="400" Width="500">
    <UserControl.Resources>
        <Pages:VisibilityConverter x:Key="VisibilityConverter"/>
        <Pages:LevelConverter x:Key="LevelConverter"/>
    </UserControl.Resources>
    <ui:Card VerticalAlignment="Stretch">
        <Grid Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label x:Name="title" Content="抽取结果"  HorizontalAlignment="Center" FontSize="18" VerticalAlignment="Center"/>
            <ScrollViewer Grid.Row="1">
                <ItemsControl x:Name="Students" d:ItemsSource="{d:SampleData ItemCount=56}" ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType={x:Type local:RandomResult}}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:Card Margin="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Image Source="{Binding HeadPicUrl}" Width="50" Height="50">
                                        <Image.Clip>
                                            <EllipseGeometry RadiusX="25" RadiusY="25" Center="25,25" />
                                        </Image.Clip>
                                    </Image>
                                    <Label Grid.Row="1" Content="{Binding Name}" FontSize="12" Margin="5" HorizontalAlignment="Center"/>
                                    <ui:Badge Grid.Row="1" Content="小语种" FontSize="11" HorizontalAlignment="Left" Appearance="Info" Visibility="{Binding IsMinorLang, Converter={StaticResource VisibilityConverter}}" Margin="7,27,0,2" Grid.RowSpan="2"/>
                                </Grid>
                            </ui:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <ui:Button Content="确认" Icon="Checkmark48" Appearance="Primary" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="15" Click="Confirm" Grid.Row="2"/>

        </Grid>
    </ui:Card>
</UserControl>

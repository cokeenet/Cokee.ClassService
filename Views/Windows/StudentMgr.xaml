<Window x:Class="Cokee.ClassService.Views.Windows.StudentMgr"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Title="StudentMgr" Width="995" Topmost="True" FontFamily="Lato" WindowStartupLocation="CenterScreen"
    Height="625"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ui:TitleBar
            Title="CokeeClass | 学生管理" Grid.Row="0" HorizontalAlignment="Stretch" CanMaximize="True"
            ShowMaximize="True" ShowMinimize="True" />
        <Grid Grid.Row="1" Margin="3,3,3,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ui:NavigationView PaneDisplayMode="LeftFluent"
               Grid.Column="0" Margin="6,0,6,0">
                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem
                        Content="班级设置" Icon="{ui:SymbolIcon Symbol=Settings32}" Click="ClassSetting" />
                    <ui:NavigationViewItemSeparator />
                    <ui:NavigationViewItem Content="随机抽取" Icon="{ui:SymbolIcon Symbol=ArrowShuffle48}" Click="Random" />
                    <ui:NavigationViewItem Content="添加学生" Icon="{ui:SymbolIcon Symbol=Add48}" Click="AddStu" />
                    <ui:NavigationViewItem Content="批量添加" Icon="{ui:SymbolIcon Symbol=AddSubtractCircle48}" Click="AddMuitlStu" />
                </ui:NavigationView.MenuItems>
                <ui:NavigationView.FooterMenuItems>
                    <ui:NavigationViewItem
                        Content="关于" Icon="{ui:SymbolIcon Symbol=Info24}" />
                </ui:NavigationView.FooterMenuItems>
            </ui:NavigationView>
            <Border
                Grid.Column="1" Margin="0" CornerRadius="8,0,0,0">
                <Frame x:Name="RootFrame" Margin="4,8" ScrollViewer.CanContentScroll="True" Source="/Views/Pages/StudentList.xaml" />
            </Border>
            <StatusBar Grid.Column="1" VerticalAlignment="Bottom" Background="{ui:ThemeResource}">
                <StatusBarItem>
                    <TextBlock x:Name="className" d:Text="高一一班" />
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock x:Name="stuCount" d:Text="共 56 名学生" />
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>
<ui:UiWindow x:Class="Cokee.ClassService.Views.Windows.StudentMgr"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Title="StudentMgr" Width="995" Topmost="True" FontFamily="Cairo-Regular"
    Height="605" ExtendsContentIntoTitleBar="True" WindowBackdropType="Mica" WindowCornerPreference="Round"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ui:TitleBar
            Title="CokeeClass | 学生管理" Grid.Row="0" HorizontalAlignment="Stretch" CanMaximize="True"
            ShowMaximize="True" ShowMinimize="True" UseSnapLayout="True" />
        <Grid Grid.Row="1" Margin="3,3,3,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ui:NavigationStore
               Grid.Column="0" Margin="6,0,6,0"
                SelectedPageIndex="0">
                <ui:NavigationStore.Items>
                    <ui:NavigationItem
                        Content="班级设置" Icon="Settings32" Click="ClassSetting" />
                    <ui:NavigationSeparator />
                    <ui:NavigationItem Content="随机抽取" Icon="ArrowShuffle48" Click="Random" />
                    <ui:NavigationItem Content="添加学生" Icon="Add48" Click="AddStu"></ui:NavigationItem>
                    <ui:NavigationItem Content="批量添加" Icon="AddSubtractCircle48" Click="AddMuitlStu" />
                </ui:NavigationStore.Items>
                <ui:NavigationStore.Footer>
                    <ui:NavigationItem
                        Content="关于" Icon="Info24" />
                </ui:NavigationStore.Footer>
            </ui:NavigationStore>
            <Border
                Grid.Column="1" Margin="0" CornerRadius="8,0,0,0">
                <Frame x:Name="RootFrame" Margin="4,8" ScrollViewer.CanContentScroll="True" Source="/Views/Pages/StudentList.xaml" />
            </Border>
        </Grid>
    </Grid>
</ui:UiWindow>
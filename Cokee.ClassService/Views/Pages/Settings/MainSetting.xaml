<ui:Page
    x:Class="Cokee.ClassService.Views.Pages.MainSetting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:Cokee.ClassService.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cokee.ClassService.Helper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:Cokee.ClassService.Views.Pages"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    x:Name="SettingsPage"
    Title="Settings"
    d:DesignHeight="617"
    d:DesignWidth="663"
    DataContext="{Binding AppSettings}"
    FontFamily="Lato"
    mc:Ignorable="d">
    <ui:ScrollViewerEx>
        <StackPanel>
            <TextBlock
                Margin="5"
                FontSize="16"
                Text="一般" />
            <Border Margin="5" Style="{StaticResource CardBorderStyle}">
                <Grid Margin="0,10,0,10" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon
                        Margin="5,15,20,15"
                        FontSize="20"
                        Icon="{x:Static ui:FluentSystemIcons.Folder_48_Regular}" />
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                        <TextBlock
                            Margin="0,0,0,2"
                            VerticalAlignment="Bottom"
                            FontSize="14"
                            Text="桌面文件自动备份(适用冰点还原环境)" />
                        <TextBlock
                            Margin="0,2,20,5"
                            VerticalAlignment="Top"
                            FontSize="12"
                            Opacity="0.615"
                            Text="自动备份桌面文件，如开启Office套件功能则备份Word,Excel,PPT已打开的文件"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                    <ui:ToggleSwitch Grid.Column="2" IsOn="{Binding FileWatcherEnable, Mode=TwoWay}" />
                </Grid>
            </Border>
            <Border Margin="5" Style="{StaticResource CardBorderStyle}">
                <Grid Margin="0,10,0,10" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon
                        Margin="5,15,20,15"
                        FontSize="20"
                        Icon="{x:Static ui:FluentSystemIcons.Backpack_16_Regular}" />
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                        <TextBlock
                            Margin="0,0,0,2"
                            VerticalAlignment="Bottom"
                            FontSize="14"
                            Text="文件监测筛选器" />
                        <TextBlock
                            Margin="0,2,20,5"
                            VerticalAlignment="Top"
                            FontSize="12"
                            Opacity="0.615"
                            Text="可以只备份特定文件。e.g. *.* 或 *.pdf"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                    <TextBox
                        Grid.Column="2"
                        MinWidth="200"
                        VerticalAlignment="Center"
                        Text="{Binding FileWatcherFilter, Mode=TwoWay}" />
                </Grid>
            </Border>
            <Border Margin="5" Style="{StaticResource CardBorderStyle}">
                <Grid Margin="0,10,0,10" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon
                        Margin="5,15,20,15"
                        FontSize="20"
                        Icon="{x:Static ui:FluentSystemIcons.Presenter_24_Regular}" />
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                        <TextBlock
                            Margin="0,0,0,2"
                            VerticalAlignment="Bottom"
                            FontSize="14"
                            Text="启用PPT幻灯片批注" />
                        <TextBlock
                            Margin="0,2,20,5"
                            VerticalAlignment="Top"
                            FontSize="12"
                            Opacity="0.615"
                            Text="关闭后无法自动备份Office文件及使用PPT批注"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                    <ui:ToggleSwitch Grid.Column="2" IsOn="{Binding OfficeFunctionEnable, Mode=TwoWay}" />
                </Grid>
            </Border>
            <Border Margin="5" Style="{StaticResource CardBorderStyle}">
                <Grid Margin="0,10,0,10" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon
                        Margin="5,15,20,15"
                        FontSize="20"
                        Icon="{x:Static ui:FluentSystemIcons.Window_16_Regular}" />
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                        <TextBlock
                            Margin="0,0,0,2"
                            VerticalAlignment="Bottom"
                            FontSize="14"
                            Text="桌面悬浮窗" />
                    </StackPanel>
                    <ui:ToggleSwitch Grid.Column="2" IsOn="{Binding DesktopBgWin, Mode=TwoWay}" />
                </Grid>
            </Border>
            <TextBlock
                Margin="5"
                FontSize="16"
                Text="Debug 调试功能"
                Visibility="Collapsed" />
            <Border Margin="5" Style="{StaticResource CardBorderStyle}">
                <Grid Margin="0,10,0,10" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon
                        Margin="5,15,20,15"
                        FontSize="20"
                        Icon="{x:Static ui:FluentSystemIcons.FlashAuto_24_Regular}" />
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                        <TextBlock
                            Margin="0,0,0,2"
                            VerticalAlignment="Bottom"
                            FontSize="14"
                            Text="开机自启" />
                    </StackPanel>
                    <ui:ToggleSwitch
                        x:Name="AutoBootToggleSwitch"
                        Grid.Column="2"
                        IsEnabled="True"
                        Toggled="ToggleSwitch_Toggled" />
                </Grid>
            </Border>
            <Border Margin="5" Style="{StaticResource CardBorderStyle}">
                <Grid Margin="0,10,0,10" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:FontIcon
                        Margin="5,15,20,15"
                        FontSize="20"
                        Icon="{x:Static ui:FluentSystemIcons.Clock_12_Regular}" />
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                        <TextBlock
                            Margin="0,0,0,2"
                            VerticalAlignment="Bottom"
                            FontSize="14"
                            Text="倒计时日期" />
                        <TextBlock
                            Margin="0,2,20,5"
                            VerticalAlignment="Top"
                            FontSize="12"
                            Opacity="0.615"
                            Text="供桌面悬浮窗使用，留空不显示"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                    <TextBox
                        Grid.Column="2"
                        MinWidth="200"
                        VerticalAlignment="Center"
                        Text="{Binding CountDownDate, Mode=TwoWay}" />
                </Grid>
            </Border>
            <StackPanel Orientation="Horizontal">
                <Button Margin="5" Click="Restart">
                    <ui:IconAndText Content="重启ClassService" Icon="{x:Static ui:FluentSystemIcons.ArrowRedo_48_Regular}" />
                </Button>
                <Button
                    Margin="5"
                    Click="CheckUpdate"
                    Visibility="Collapsed">
                    <ui:IconAndText Content="检查更新" Icon="{x:Static ui:FluentSystemIcons.ArrowDownload_48_Regular}" />
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Visibility="Collapsed">
                <Button
                    Margin="5"
                    Click="ReleaseObj"
                    Tag="0">
                    <ui:IconAndText Content="释放Word对象" Icon="{x:Static ui:FluentSystemIcons.Delete_48_Regular}" />
                </Button>
                <Button
                    Margin="5"
                    Click="ReleaseObj"
                    Tag="1">
                    <ui:IconAndText Content="释放Excel对象" Icon="{x:Static ui:FluentSystemIcons.Delete_48_Regular}" />
                </Button>
                <Button
                    Margin="5"
                    Click="ReleaseObj"
                    Tag="2">
                    <ui:IconAndText Content="释放PPT对象" Icon="{x:Static ui:FluentSystemIcons.Delete_48_Regular}" />
                </Button>
            </StackPanel>
        </StackPanel>
    </ui:ScrollViewerEx>
</ui:Page>
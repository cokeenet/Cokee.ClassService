<UserControl
    x:Class="Cokee.ClassService.Views.Controls.PostNote"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cokee.ClassService.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Width="500"
    Height="430"
    mc:Ignorable="d">

    <Border VerticalAlignment="Stretch" Style="{StaticResource CardBorderStyle}">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label x:Name="name" />
            <InkCanvas
                x:Name="ink"
                Grid.Row="1"
                Width="470"
                Height="300"
                Margin="5"
                Background="Black"
                EditingMode="Ink">
                <InkCanvas.DefaultDrawingAttributes>
                    <DrawingAttributes
                        Width="4.00314960629921"
                        Height="4.00314960629921"
                        Color="White" />
                </InkCanvas.DefaultDrawingAttributes>
            </InkCanvas>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="pen"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="Pen"
                    Style="{StaticResource AccentButtonStyle}">
                    <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.Pen_48_Regular}" />
                </Button>
                <Button
                    x:Name="era"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="Eraser">
                    <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.Eraser_24_Regular}" />
                </Button>
                <Button
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="save">
                    <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.Save_24_Regular}" />
                </Button>
            </Grid>
            <ui:AutoSuggestBox
                x:Name="atu"
                Grid.Row="3"
                Margin="5"
                PlaceholderText="Input name here"
                TextChanged="Atu_sc" />
        </Grid>
    </Border>
</UserControl>
<UserControl
    x:Class="Cokee.ClassService.Views.Controls.CourseCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cokee.ClassService.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Width="300"
    Height="120"
    Margin="0,20,20,0"
    HorizontalAlignment="Right"
    VerticalAlignment="Top"
    FontFamily="Cairo"
    mc:Ignorable="d">
    <UserControl.RenderTransform>
        <TranslateTransform x:Name="transT" d:X="0" X="330" />
    </UserControl.RenderTransform>
    <Border VerticalAlignment="Stretch" Style="{StaticResource CardBorderStyle}">
        <Grid VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />

                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="title"
                Margin="0,15,0,15"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                d:Text="22:00 下一节:没课了"
                FontSize="24" />
            <TextBlock
                x:Name="subtitle"
                Grid.Row="1"
                Margin="0,15,0,15"
                HorizontalAlignment="Left"
                d:Text="本节课程:语文课 结束"
                FontSize="18" />
        </Grid>
    </Border>
</UserControl>
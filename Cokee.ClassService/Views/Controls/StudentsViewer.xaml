<UserControl
    x:Class="Cokee.ClassService.Views.Controls.StudentsViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:Cokee.ClassService.Helper"
    xmlns:local="clr-namespace:Cokee.ClassService.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    d:Background="{ui:AcrylicBrush}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <helper:VisibilityConverter x:Key="VisibilityConverter" />
        <helper:LevelConverter x:Key="LevelConverter" />
        <helper:HeadPicUrlConverter x:Key="HeadPicUrlConverter" />
    </UserControl.Resources>
    <Grid>
        <ItemsControl
            x:Name="Students"
            Margin="5"
            ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType={x:Type local:StudentsViewer}}}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="{Binding Columns, RelativeSource={RelativeSource AncestorType={x:Type local:StudentsViewer}}}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border
                        Width="100"
                        Height="130"
                        Margin="5"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        MouseDown="Card_MouseDown"
                        MouseRightButtonDown="Card_MouseRightButtonDown"
                        Style="{StaticResource CardBorderStyle}"
                        Tag="{Binding}">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <ui:PersonPicture
                                Width="50"
                                Height="50"
                                ProfilePicture="{Binding HeadPicUrl, Converter={StaticResource HeadPicUrlConverter}}" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="5"
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Text="{Binding Name}" />
                            <TextBlock
                                Grid.Row="2"
                                HorizontalAlignment="Center"
                                Background="{Binding Role, Converter={StaticResource LevelConverter}}"
                                FontSize="12"
                                Text="{Binding RoleStr}"
                                Visibility="{Binding RoleStr, Converter={StaticResource VisibilityConverter}}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
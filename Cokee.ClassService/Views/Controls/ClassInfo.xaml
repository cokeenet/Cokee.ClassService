<UserControl
    x:Class="Cokee.ClassService.Views.Controls.ClassInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Cokee.ClassService.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:Cokee.ClassService.Helper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:uix="http://schemas.inkore.net/lib/ui/wpf"
    x:Name="stuinfo"
    Width="500"
    Height="400"
    d:DesignHeight="700"
    DataContext="{Binding Student}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <helper:SexToIntConverter x:Key="SexConverter" />
        <helper:HeadPicUrlConverter x:Key="HeadPicUrlConverter" />
    </UserControl.Resources>
    <Border Style="{StaticResource ThemeBackground}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="18"
                Text="学生信息" />
            <TextBlock
                Grid.Row="1"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                d:Text="ID 00000"
                FontSize="14"
                Text="{Binding ID, StringFormat=ID \{0\}}" />
            <controls:ScrollViewerEx
                x:Name="scrollviewer"
                Grid.Row="2"
                Margin="5">
                <uix:SimpleStackPanel Spacing="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ui:PersonPicture
                            Grid.RowSpan="2"
                            Width="80"
                            Height="80"
                            Margin="5"
                            HorizontalAlignment="Left"
                            ProfilePicture="{Binding HeadPicUrl, Converter={StaticResource HeadPicUrlConverter}}" />
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Bottom"
                                FontSize="16"
                                Text="姓名" />
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="5"
                                Text="{Binding Name, Mode=TwoWay}" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="5"
                                VerticalAlignment="Bottom"
                                FontSize="16"
                                Text="简介" />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5"
                                Text="{Binding Desc, Mode=TwoWay}" />
                        </Grid>
                    </Grid>
                    <Border Style="{StaticResource CardBorderStyle}">
                        <Grid Margin="0,10,0,10" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:FontIcon
                                Margin="5,15,20,15"
                                FontSize="20"
                                Icon="{x:Static ui:FluentSystemIcons.People_28_Regular}" />
                            <StackPanel
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <TextBlock
                                    Margin="0,0,0,2"
                                    VerticalAlignment="Bottom"
                                    FontSize="14"
                                    Text="性别" />
                            </StackPanel>
                            <ComboBox Grid.Column="2" SelectedIndex="{Binding DataContext.Sex, Converter={StaticResource SexConverter}, ElementName=stuinfo}">
                                <ComboBoxItem Content="女" />
                                <ComboBoxItem Content="男" />
                            </ComboBox>
                        </Grid>
                    </Border>
                    <Border Style="{StaticResource CardBorderStyle}">
                        <Grid Margin="0,10,0,10" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:FontIcon
                                Margin="5,15,20,15"
                                FontSize="20"
                                Icon="{x:Static ui:FluentSystemIcons.Notebook_32_Regular}" />
                            <StackPanel
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <TextBlock
                                    Margin="0,0,0,2"
                                    VerticalAlignment="Bottom"
                                    FontSize="14"
                                    Text="职位" />
                            </StackPanel>
                            <Grid Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBox
                                    MinWidth="180"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding RoleStr, Mode=TwoWay}" />
                                <ComboBox Grid.Column="1" SelectedIndex="{Binding Role, Mode=TwoWay}">
                                    <ComboBoxItem Content="无职位" />
                                    <ComboBoxItem Content="Level 1" />
                                    <ComboBoxItem Content="Level 2" />
                                    <ComboBoxItem Content="Level 3" />
                                </ComboBox>
                            </Grid>
                        </Grid>
                    </Border>
                    <Border Style="{StaticResource CardBorderStyle}">
                        <Grid Margin="0,10,0,10" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:FontIcon
                                Margin="5,15,20,15"
                                FontSize="20"
                                Icon="{x:Static ui:FluentSystemIcons.FoodCake_24_Regular}" />
                            <StackPanel
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <TextBlock
                                    Margin="0,0,0,2"
                                    VerticalAlignment="Bottom"
                                    FontSize="14"
                                    Text="生日" />
                                <TextBlock
                                    Margin="0,2,20,5"
                                    VerticalAlignment="Top"
                                    FontSize="12"
                                    Opacity="0.615"
                                    Text="将使用QQ头像作为用户头像"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="WrapWithOverflow" />

                            </StackPanel>
                            <DatePicker
                                Grid.Column="2"
                                MinWidth="150"
                                HorizontalAlignment="Right"
                                SelectedDate="{Binding DataContext.BirthDay, ElementName=stuinfo, Mode=TwoWay}" />
                        </Grid>
                    </Border>
                    <Border Style="{StaticResource CardBorderStyle}">
                        <Grid Margin="0,10,0,10" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:FontIcon
                                Margin="5,15,20,15"
                                FontSize="20"
                                Icon="{x:Static ui:FluentSystemIcons.Games_32_Regular}" />
                            <StackPanel
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <TextBlock
                                    Margin="0,0,0,2"
                                    VerticalAlignment="Bottom"
                                    FontSize="14"
                                    Text="QQ" />
                                <TextBlock
                                    Margin="0,2,20,5"
                                    VerticalAlignment="Top"
                                    FontSize="12"
                                    Opacity="0.615"
                                    Text="将使用QQ头像作为用户头像"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>

                            <TextBox
                                Grid.Column="2"
                                MinWidth="150"
                                VerticalAlignment="Center"
                                Text="{Binding QQ, Mode=TwoWay}" />
                        </Grid>
                    </Border>
                    <Border Style="{StaticResource CardBorderStyle}">
                        <Grid Margin="0,10,0,10" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:FontIcon
                                Margin="5,15,20,15"
                                FontSize="20"
                                Icon="{x:Static ui:FluentSystemIcons.LocalLanguage_28_Regular}" />
                            <StackPanel
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <TextBlock
                                    Margin="0,0,0,2"
                                    VerticalAlignment="Bottom"
                                    FontSize="14"
                                    Text="小语种" />
                                <TextBlock
                                    Margin="0,2,20,5"
                                    VerticalAlignment="Top"
                                    FontSize="12"
                                    Opacity="0.615"
                                    Text="ps:请勿随意改动"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="WrapWithOverflow"
                                    Visibility="Collapsed" />
                            </StackPanel>
                            <ui:ToggleSwitch Grid.Column="2" IsOn="{Binding IsMinorLang, Mode=TwoWay}" />
                        </Grid>
                    </Border>
                </uix:SimpleStackPanel>
            </controls:ScrollViewerEx>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    Margin="15"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="Confirm"
                    Style="{DynamicResource AccentButtonStyle}">
                    <ui:IconAndText Content="确认" Icon="{x:Static ui:FluentSystemIcons.Checkmark_48_Regular}" />
                </Button>
                <Button
                    Grid.Column="1"
                    Margin="15"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="Cancel">
                    <ui:IconAndText Content="取消" Icon="{x:Static ui:FluentSystemIcons.Dismiss_48_Regular}" />
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>
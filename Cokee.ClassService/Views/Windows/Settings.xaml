<Window
    x:Class="Cokee.ClassService.Views.Windows.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cokee.ClassService.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="猫圈圈 | 设置"
    Width="1000"
    Height="650"
    ui:ThemeManager.IsThemeAware="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    FontFamily="Lato"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="3,3,3,3">
        <ui:NavigationView
            x:Name="NavigationViewControl"
            IsBackButtonVisible="Collapsed"
            IsFooterSeparatorVisible="{x:Null}"
            IsPaneOpen="False"
            IsTitleBarAutoPaddingEnabled="False"
            PaneDisplayMode="Top"
            SelectionChanged="OnNavigationViewSelectionChanged">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Content="首选项"
                    IsSelected="True"
                    Tag="0">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.BuildingHome_24_Regular}" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="关于" Tag="1">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.BuildingHome_24_Regular}" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:Frame
                x:Name="rootFrame"
                Margin="5"
                Navigated="OnRootFrameNavigated"
                Navigating="OnRootFrameNavigating"
                ScrollViewer.CanContentScroll="True"
                Source="/Views/Pages/Settings/MainSetting.xaml" />
        </ui:NavigationView>
    </Grid>
</Window>